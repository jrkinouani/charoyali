<div class="row">
  <div class="col-lg-4 col-md-offset-4 text-center">
    <h2>Bienvenue sur Charoyali</h2> <h4>Créer un compte</h4><br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group"> <br>
    <%= f.text_field :first_name, autofocus: true, class: "form-control",  placeholder: "Entrez votre prénom" %>
  </div>

  <div class="form-group"> <br>
    <%= f.text_field :last_name, autofocus: true,  class: "form-control", placeholder: "Entrez votre nom" %>
  </div>

  <div class="form-group"> <br>
    <%= f.text_field :phone, autofocus: true, class: "form-control",  placeholder: "Entrez votre numéro de téléphone" %>
  </div>

  <div class="form-group"> <br>
    <%= f.email_field :email, autofocus: true,  class: "form-control", placeholder: "Entrez votre email" %>
  </div>

  <div class="form-group">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", autofocus: true,  class: "form-control", placeholder: "Votre mot de passe" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", autofocus: true,  class: "form-control", placeholder: "Confirmez votre mot de passe" %>
  </div>

  <div class="actions">
    <%= f.submit "Inscrivez-vous , c'est gratuit !" ,:class =>  "btn btn-lg btn-primary btn-block"  %>
  </div>
 <% end %><br />
   <%= render "users/shared/links" %>
 <div class="margin-top-s gray">
  <span class="fa-stack fa-lg">
   <i class="fa fa-circle fa-stack-2x"></i>
   <i class="fa fa-book fa-stack-1x fa-inverse"></i>
  </span>
   <span>En créant un compte, vous acceptez les
      <%= link_to "Conditions générales d'utilisation", static_pages_ventes_path %>
       et la <%= link_to "Politique de confidentialité", static_pages_ventes_path %>
        de Charoyali.
   </span>
  </div>

 </div>
</div>
