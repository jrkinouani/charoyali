<div class="row">
  <div class="col-lg-4 col-md-offset-4 col-sm-6  col-sm-offset-3 text-center">
    <h2>Bienvenue sur Charoyali</h2> <h4>Créer un compte</h4><br>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="form-group"> <br>
    <%= f.text_field :first_name, autofocus: true, class: "form-control",  placeholder: "Entrez votre prénom" %>
  </div>

  <div class="form-group"> <br>
    <%= f.text_field :last_name, autofocus: true,  class: "form-control", placeholder: "Entrez votre nom" %>
  </div>

  <div class="form-group"> <br>
    <%= f.text_field :phone, autofocus: true, class: "form-control",  placeholder: "Entrez votre numéro de téléphone" %>
  </div>

  <div class="form-group"> <br>
    <%= f.email_field :email, autofocus: true,  class: "form-control", placeholder: "Entrez votre email" %>
  </div>

  <div class="form-group"> <br>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder:"Mot de passe", class: "form-control" %>
  </div>

<div class="form-group"> <br>
    <%= f.password_field :password_confirmation, autocomplete: "off" , placeholder:"Confirmez le mot de passe", class: "form-control"%>
  </div>

  <div class="actions"> <br>
    <%= f.submit "Inscrivez-vous c'est gratuit !", class: "btn btn-primary btn-lg " %>
  </div>
<% end %> <br>
<%= render "devise/shared/links" %>
</div>
</div>
