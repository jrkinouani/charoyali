<div class="row">
  <div class="col-lg-4 col-md-offset-4 text-center">
  <h2>livreurs</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group"> <br>
      <%= f.email_field :email, autofocus: true,  class: "form-control", placeholder: "Entrez votre email" %>
    </div>

    <div class="form-group"> <br>
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off",  class: "form-control", placeholder: "Votre mot de passe" %>
    </div>

    <div class="form-group"> <br>
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control", placeholder: "Votre mot de passe" %>
    </div>

    <div class="actions">
      <%= f.submit "Inscrivez-vous , c'est gratuit !" ,:class =>  "btn btn-lg btn-primary btn-block"  %>
    </div>
  <% end %>

  <%= render "livreurs/shared/links" %>
</div>
</div>
