<div class="row">
 <div class="col-lg-4 col-md-offset-4 text-center">
  <h2>Inscrivez vous</h2> <br> <br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Votre email", class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", placeholder:"Votre nom de passe", class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" , placeholder:"Votre nom de passe, 6 caractÃ¨res minimum", class:"form-control"%>
  </div>

  <div class="actions">
    <%= f.submit "Validez" ,:class =>  "btn btn-lg btn-primary btn-block"  %>
  </div>
<% end %>

<%= render "admins/shared/links" %>
 </div>
</div>
